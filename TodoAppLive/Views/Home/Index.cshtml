@model IEnumerable<TodoAppLive.Models.Todo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>This is the index</p>

@foreach (var todo in Model)
{
<div>
    <a href="/Home/Details/@todo.Id">@todo.Id - @todo.Description (Owner : @todo.Owner.Name)</a>
    <a href="/Home/Delete/@todo.Id">Delete</a>
</div>
}
    <a href="/Home/Create">Create a New Todo</a>